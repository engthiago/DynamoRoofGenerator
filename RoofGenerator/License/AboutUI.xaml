<Window x:Name="AboutWindow" x:Class="Register.AboutUI" x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="onBim plus ONBOX"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="AboutWindow_Loaded" SizeToContent="Height" Width="550">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" >
                    <Image x:Name="imgOnbox" Source="/RoofGenerator;component/Resources/ONBOXApps.png" HorizontalAlignment="Left" Height="60" Cursor="Hand" MouseDown="imgOnbox_MouseDown"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Image x:Name="imgFacebook" Source="/RoofGenerator;component/Resources/facebook.png" HorizontalAlignment="Right" Height="40" Margin="20,0" MouseDown="imgFacebook_MouseDown" Cursor="Hand"/>
                    <Image x:Name="imgYoutube" Source="/RoofGenerator;component/Resources/youtube.png" HorizontalAlignment="Right" Height="40" Margin="20,0" MouseDown="imgYoutube_MouseDown" Cursor="Hand"/>
                    <Image x:Name="imgMail" Source="/RoofGenerator;component/Resources/mail.png" HorizontalAlignment="Right" Height="40" Margin="20,0" Cursor="Hand" MouseDown="imgMail_MouseDown"/>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <ScrollViewer Margin="0,10,0,0" Background="#FFF1F1F1" BorderThickness="1" BorderBrush="#FF111111" Height="200" MaxHeight="200">
                    <TextBox x:Name="textInformation" IsReadOnly="True" Margin="5" Background="#FFF1F1F1" TextWrapping="Wrap" TextAlignment="Justify" BorderBrush="{x:Null}" BorderThickness="0"/>
                </ScrollViewer>
            </StackPanel>
            <DockPanel>
                <Label x:Name="lblVersion" Content="Versão: "/>
                <TextBlock x:Name="lblVersionInfo" Text="0.0.0.0" MinWidth="120" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </DockPanel>
            <DockPanel>
                <Label Content = "Licença:"/>
                <TextBlock x:Name="lblLicenseInfo" Text="Software não registrado." MinWidth="120" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
            </DockPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnLicense" Content="Ativar" Height="24" HorizontalAlignment="Right" Margin="10,0,0,0" Click="btnLicense_Click" MinWidth="100" />
                <Button x:Name="btnInfo" Content="Site"  Width="90" Height="24" HorizontalAlignment="Right" Margin="10,0,0,0" Click="btnInfo_Click"/>
                <Button x:Name="btnOK" Content="OK" Width="90" Height="24" HorizontalAlignment="Right" Margin="10,0,0,0" Click="btnOK_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
